---
import { ViewTransitions } from 'astro:transitions';
import { Home, HelpCircle, MessageSquareMore } from 'lucide-react';
import { acidmalicon } from 'astro:assets';

import ThemeSwitcher from '/src/components/ThemeSwitcher.astro';
import SocialButtons from '/src/components/SocialButtons.astro';
import AcidMalIcon from '../assets/acidmalicon.jpg';


interface Props {
  title: string;
  description?: string;
}

const { title, description = "AcidMal's Website" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/acidmal.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <ViewTransitions />
    <script is:inline>
      function getInitialTheme() {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      }

      function setTheme(theme) {
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
        localStorage.setItem('theme', theme);
      }

      setTheme(getInitialTheme());

      document.addEventListener('astro:after-swap', () => {
        setTheme(localStorage.getItem('theme') || getInitialTheme());
      });
    </script>
  </head>
  <body class="flex flex-col min-h-full bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
    <header class="bg-gray-200 dark:bg-gray-800 text-gray-900 dark:text-gray-100 p-4 shadow-md">
      <nav class="container mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-2">
          <img 
            src={AcidMalIcon.src} 
            alt="AcidMal Icon" 
            class="w-10 h-10 rounded-full"
          />
          <a href="/" class="text-xl font-bold">AcidMal</a>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/" class="p-2 rounded-full hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors
             duration-200" aria-label="Home">
            <Home class="w-5 h-5" />
          </a>
          <a href="/blog" class="p-2 rounded-full hover:bg-gray-300 dark:hover:bg-gray-700 transition
             -colors duration-200" aria-label="About">
            <MessageSquareMore class="w-5 h-5" />
          </a>
          <a href="/about" class="p-2 rounded-full hover:bg-gray-300 dark:hover:bg-gray-700 transition
             -colors duration-200" aria-label="About">
            <HelpCircle class="w-5 h-5" />
          </a>
          <ThemeSwitcher />
        </div>
      </nav>
    </header>
    <main class="flex-grow container mx-auto p-4">
      <slot />
    </main>
    <footer class="bg-gray-200 dark:bg-gray-800 text-gray-900 dark:text-gray-100 p-4 mt-8">
      <div class="container mx-auto text-center space-y-4">
        <SocialButtons className="justify-center" />
        <p>&copy; {new Date().getFullYear()} AcidMal. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
