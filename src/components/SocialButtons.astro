---
import { Discord, X, Steam, Instagram, Github } from 'simple-icons-astro';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class:list={["flex space-x-4", className]}>

  <a
    href={`https://x.com/${import.meta.env.PUBLIC_TWITTER_USERNAME}`}
    class="social-button"
    aria-label="X"
  >
    <X className="w-5 h-5" />
  </a>

  <a
    href={`https://instagram.com/${import.meta.env.PUBLIC_INSTAGRAM_USERNAME}`}
    class="social-button"
    aria-label="Instagram"
  >
    <Instagram className="w-5 h-5" />
  </a>

  <a
    href={`https://discord.com/users/${import.meta.env.PUBLIC_DISCORD_ID}`}
    class="social-button"
    aria-label="Discord"
  >
    <Discord className="w-5 h-5" />
 </a>

  <a
    href={`https://github.com/${import.meta.env.PUBLIC_GITHUB_USERNAME}`}
    class="social-button"
    aria-label="GitHub"
  >
    <Github className="w-5 h-5" />
  </a>

  <a
    href={`https://steamcommunity.com/id/${import.meta.env.PUBLIC_STEAM_ID}`}
    class="social-button"
    aria-label="Steam"
  >
    <Steam className="w-5 h-5" />
  </a>

</div>

<style>
  .social-button {
    @apply p-2 rounded-full bg-gray-300 dark:bg-gray-700 text-gray-700 dark:text-gray-300 transition-all duration-300;
    box-shadow: 0 0 0 0 rgba(156, 163, 175, 0);
  }

  .social-button:hover {
    @apply bg-gray-400 dark:bg-gray-600;
    box-shadow: 0 0 20px 0 rgba(156, 163, 175, 0.5);
    transform: translateY(-2px);
  }
</style>


