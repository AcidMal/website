---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: "Welcome!",
    slug: "welcome",
    excerpt: "This is just a first post of many to come. Although infrequent this will be longer format platform.",
    date: "26-12-2024"
  },
];
---

<Layout title="Blog | AcidMal">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Blog Posts</h1>
    <div class="grid gap-6">
      {posts.map(post => (
        <article class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-bold mb-2">
            <a href={`/blog/${post.slug}`} class="hover:text-gray-600 dark:hover:text-gray-300">
              {post.title}
            </a>
          </h2>
          <p class="text-gray-500 dark:text-gray-400 text-sm mb-2">{post.date}</p>
          <p class="text-gray-600 dark:text-gray-300">{post.excerpt}</p>
        </article>
      ))}
    </div>
  </div>
</Layout>


