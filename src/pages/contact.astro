---
import Layout from '../layouts/Layout.astro';
import { Mail } from 'lucide-react';
import { Discord, X, Github, Instagram, Steam } from 'simple-icons-astro';
---

<Layout title="Contact | AcidMal">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Get in Touch</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Social Media Section -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-4">Connect With Me</h2>
        <div class="space-y-4">
          <a href={`https://x.com/${import.meta.env.PUBLIC_TWITTER_USERNAME}`} 
             class="flex items-center p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-300 ease-in-out hover:ease-in-out hover:duration-300">
            <X className="w-6 h-6 text-grey-400 mr-3" />
            <div>
              <p class="font-medium">X</p>
              <p class="text-sm text-gray-600/50 dark:text-gray-300/50">@{import.meta.env.PUBLIC_TWITTER_USERNAME}</p>
            </div>
          </a>
          
          <a href={`https://github.com/${import.meta.env.PUBLIC_GITHUB_USERNAME}`} 
             class="flex items-center p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-300 ease-in-out hover:ease-in-out hover:duration-300">
            <Github className="w-6 h-6 text-grey-400 mr-3" />
            <div>
              <p class="font-medium">GitHub</p>
              <p class="text-sm text-gray-600/50 dark:text-gray-300/50">{import.meta.env.PUBLIC_GITHUB_USERNAME}</p>
            </div>
          </a>

          <a href={`https://instagram.com/${import.meta.env.PUBLIC_INSTAGRAM_USERNAME}`}
             class="flex items-center p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-300 ease-in-out hover:ease-in-out hover:duration-300">
            <Instagram className="w-6 h-6 text-grey-400 mr-3" />
            <div>
              <p class="font-medium">Instagram</p>
              <p class="text-sm text-gray-600/50 dark:text-gray-300/50">@{import.meta.env.PUBLIC_INSTAGRAM_USERNAME}</p>
            </div>

          <a href={`https://steamcommunity.com/id/${import.meta.env.PUBLIC_STEAM_ID}`}
             class="flex items-center p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-300 ease-in-out hover:ease-in-out hover:duration-300">
            <Steam className="w-6 h-6 text-grey-400 mr-3" />
            <div>
              <p class="font-medium">Steam</p>
              <p class="text-sm text-gray-600/50 dark:text-gray-300/50">{import.meta.env.PUBLIC_STEAM_ID}</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Email Form Section -->
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-4">Send Me an Email</h2>
        <form 
          action="https://api.web3forms.com/submit"
          method="POST"
          class="space-y-4"
        >
          <input 
            type="hidden" 
            name="access_key" 
            value={import.meta.env.PUBLIC_WEB3FORMS_KEY}
          />
          <div>
            <label for="name" class="block text-sm font-medium mb-1">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 
                     bg-white dark:bg-gray-700"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium mb-1">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 
                     bg-white dark:bg-gray-700"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 
                     bg-white dark:bg-gray-700"
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full bg-purple-400 hover:bg-purple-600 text-white font-medium py-2 px-4 rounded-lg 
                   transition-colors duration-300 ease-in-out hover:ease-in-out hover:duration-300 flex items-center justify-center"
          >
            <Mail className="w-5 h-5 mr-2" />
            Send Message
          </button>
        </form>
      </div>
    </div>

    <div class="mt-8 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-semibold mb-4">Alternative Contact Methods</h2>
      <p class="text-gray-600 dark:text-gray-300 mb-4">
        You can also reach me directly at my email address:
        <a href="mailto:contact@acidmal.com" class="text-purple-400 ease-in-out duration-300 hover:ease-in-out hover:duration-300 
          hover:text-purple-600 dark:text-purple-400 hover:ease-in-out hover:duration-300 dark:hover:text-purple-300">
          contact@acidmal.com
        </a>
      </p>
      <p class="text-gray-600 dark:text-gray-300">
        I typically respond within 24-48 hours during weekdays. For urgent matters, 
        Discord is usually the fastest way to reach me.
      </p>
    </div>
  </div>
</Layout>